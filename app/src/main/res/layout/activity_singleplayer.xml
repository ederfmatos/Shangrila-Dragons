<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2"
    tools:context=".activities.PlayActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao8"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:onClick="onDragonClick"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao7"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:background="#00FFFFFF"
        android:onClick="onDragonClick"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/dragao8"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao3"
        style="@style/Dragao_verde"
        android:forceDarkAllowed="true"
        android:onClick="onDragonClick"
        android:theme="@style/AlertDialog.AppCompat"
        app:layout_constraintBottom_toTopOf="@+id/dragao8"
        app:layout_constraintEnd_toEndOf="@+id/dragao8"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao4"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:onClick="onDragonClick"
        app:layout_constraintBottom_toTopOf="@+id/dragao9"
        app:layout_constraintStart_toEndOf="@+id/dragao3"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao2"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:onClick="onDragonClick"
        app:layout_constraintBottom_toTopOf="@+id/dragao7"
        app:layout_constraintEnd_toStartOf="@+id/dragao3"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao5"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:contextClickable="true"
        android:filterTouchesWhenObscured="false"
        android:onClick="onDragonClick"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/dragao10"
        app:layout_constraintStart_toEndOf="@+id/dragao4"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao1"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:labelFor="@id/dragao7"
        android:onClick="onDragonClick"
        app:layout_constraintBottom_toTopOf="@+id/dragao6"
        app:layout_constraintEnd_toStartOf="@+id/dragao2"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao11"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:onClick="onDragonClick"
        app:layout_constraintBottom_toBottomOf="@+id/dragao12"
        app:layout_constraintEnd_toStartOf="@+id/dragao12"
        app:layout_constraintTop_toBottomOf="@+id/dragao6"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao6"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:onClick="onDragonClick"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/dragao7"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao9"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:onClick="onDragonClick"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/dragao8"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao10"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:onClick="onDragonClick"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/dragao9"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao14"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:onClick="onDragonClick"
        app:layout_constraintBottom_toBottomOf="@+id/dragao13"
        app:layout_constraintStart_toEndOf="@+id/dragao13"
        app:layout_constraintTop_toBottomOf="@+id/dragao9"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragaovermelho"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:onClick="onDragonClick"
        app:layout_constraintBottom_toBottomOf="@+id/dragao14"
        app:layout_constraintStart_toEndOf="@+id/dragao14"
        app:layout_constraintTop_toBottomOf="@+id/dragao10"
        app:srcCompat="@drawable/dragaovermelho" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao13"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:onClick="onDragonClick"
        app:layout_constraintStart_toStartOf="@+id/dragao8"
        app:layout_constraintTop_toBottomOf="@+id/dragao8"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dragao12"
        android:layout_width="69dp"
        android:layout_height="83dp"
        android:onClick="onDragonClick"
        app:layout_constraintBottom_toBottomOf="@+id/dragao13"
        app:layout_constraintEnd_toStartOf="@+id/dragao13"
        app:layout_constraintTop_toBottomOf="@+id/dragao7"
        app:srcCompat="@drawable/dragaoverde" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wallpaper" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView"
        android:layout_width="139dp"
        android:layout_height="46dp"
        android:layout_marginBottom="36dp"
        android:onClick="onClickButtonRemove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pronto" />

    <TextView
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="player"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toStartOf="@+id/dragao1"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/dragao5"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
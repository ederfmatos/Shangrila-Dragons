<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.spectron.dragoesdeshangrila">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/wallpaper"
        android:label="@string/app_name"
        android:roundIcon="@drawable/wallpaper"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".activities.MatchActivity"
            android:label="@string/title_activity_match"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activities.SearchOnlinePlayerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MultiPlayerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SinglePlayerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>